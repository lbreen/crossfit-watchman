<div class="card" style="margin: 36px 0;">
  <div class="homepage-card-photo">
    <%= image_tag(photo) %>
  </div>
  <div class="homepage-card-text">
    <h2><%= title %></h2>
    <%= link_to path, class: 'homepage-card-link' do %>
      <p><%= subtitle %> <i class="fa fa-arrow-circle-right"></i></p>
    <% end %>
  </div>
</div>
