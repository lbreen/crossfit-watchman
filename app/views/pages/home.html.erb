<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('https://res.cloudinary.com/www-crossfitwatchman-com/image/upload/v1543751696/background.jpg');">
  <div class="banner-content">
    <h1 id='homepage-title'>CrossFit Watchman</h1>
    <p><span id="typed"></span></p>
    <%= link_to "Start training", lessons_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= render 'pages/homepage_card', title: 'About us', subtitle: 'Find out about our team', photo: 'crossfit-photo-1.jpg', path: 'about' %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= render 'pages/homepage_card', title: 'Timetable', subtitle: 'See our weekly programme', photo: 'crossfit-photo-2.jpg', path: 'timetable' %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= render 'pages/homepage_card', title: 'Join us', subtitle: 'Join us now', photo: 'crossfit-photo-3.jpg', path: 'join' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {
    var options = {
      strings: [
        "Strong,^1000 Fast,^1000 and Hard To Kill"
        ],
      typeSpeed: 50,
      backSpeed: 30,
      startDelay: 100,
      backDelay: 1500,
      loop: true
    }

    var typed = new Typed("#typed", options);
  });
</script>
